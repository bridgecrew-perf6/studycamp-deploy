<%- include('../partials/head.ejs') %>
<div class="container">

<div class="row">
    <div class="col"></div>
    <div class="col-lg-10">
        <img src="/uploads/course.png" class="img-fluid" alt="...">
    </div>
    <div class="col"></div>
</div>

<div class="row mt-3">
    <div class="col-1"></div>
    <div class="col">
<p>
    <a class="btn btn-primary" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1"><i class="fas fa-bars"></i></a>
  </p>
</div>
  <div class="row">
    <div class="col">
      <div class="collapse multi-collapse" id="multiCollapseExample1">
        <div class="row">
            <div class="col-1">
            </div>
            <div class="col-3">
              <div class="list-group" id="list-tab" role="tablist">
                <a class="list-group-item list-group-item-action active" id="list-home-list" data-bs-toggle="list" href="/course" role="tab" aria-controls="list-home">Lập trình</a>
                <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="/course/dohoavahinhanh" role="tab" aria-controls="list-profile">Đồ họa và hình ảnh</a>
                <a class="list-group-item list-group-item-action" id="list-messages-list" data-bs-toggle="list" href="/course/ngoaingu" role="tab" aria-controls="list-messages">Ngoại ngữ</a>
              </div>
            </div>
            <div class="col"></div>
          </div>
      </div>
    </div>
  </div>
</div>

<div class="row">

    <% for(let course = 0; course < courses.length;course++) {%>
        <div class="col-lg-4">
            <div class="card" style="width: 24rem;">
              <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <% courses[course].images.forEach((img,index) => {%>
                    <div class="carousel-item <%= index === 0 ? 'active' : ''%>">
                      <img src="<%= img.url %> " class="d-block w-100" alt="...">
                    </div>
                  <%}) %>
                </div>
                <% if(courses[course].images.length > 1){%>
                  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
                  <%} %>
              </div>
                <div class="card-body">
                  <h5 class="card-title"><%= courses[course].title%></h5>
                  <div class="d-flex justify-content-between">
                    <p class="card-text"><%= courses[course].category %> </p>
                    <p class="card-text text-success"><%= courses[course].price %> vnd </p>
                  </div>
                </div>
                <a href="/courses/<%= courses[course]._id %> " class="btn btn-primary text-center">Xem ngay</a>
              </div>
        </div>
        <%} %>
</div>

</div>

<%- include('../partials/footer') %> 
</body>
</html>