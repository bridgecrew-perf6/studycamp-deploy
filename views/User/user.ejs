  <div class="container mt-3">

    <div class="row">
      <h2>TIN CÔNG NGHỆ</h2>
      <div class="col-lg-6">

        <div class="row">
          <img src="<%= news[0].image %> " class="img-thumbnail" alt="...">
          <a class="nav-link text-dark h4" href="#">
            <%= news[0].title %>
          </a>
        </div>
      </div>

      <div class="col-lg-6">

        <div class="row">
          <div class="col-5">
            <img src="<%= news[1].image %> " class="img-fluid img-thumbnail" alt="...">
          </div>
          <div class="col-7">
            <a class="nav-link text-dark h6" href="#">
              <%= news[1].title %>
            </a>
          </div>
        </div>

        <div class="row">
          <div class="col-5 mt-2">
            <img src="<%= news[2].image %>" class="img-fluid img-thumbnail" alt="">
          </div>
          <div class="col-7">
            <a href="#" class="nav-link text-dark h6">
              <%= news[2].title %>
            </a>
          </div>
        </div>

        <div class="row">
          <div class="col-5 mt-2">
            <img src="<%= news[3].image %> " class="img-fluid img-thumbnail" alt="">
