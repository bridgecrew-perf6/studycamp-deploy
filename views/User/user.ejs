            <a href="#" class="nav-link text-dark h6">
              <%= news[3].title %>
            </a>
          </div>
        </div>

      </div>
    </div>

    <div class="row">
      <h2>CÁC KHÓA HỌC NỔI BẬT</h2>
      <% for(let category of categories) {%>
        <% if(category == 'Kiến thức cơ sở') {%>
          <h2 class="mt-2">
            <%= category.toUpperCase() %>
          </h2>
          <% for(let course of courses) {%>
              <%if(course.category == 'Kiến thức cơ sở') {%>
                <div class="col-lg-3 mt-3">
                <div class="card" style="width: 18rem;">
                  <a href="/courses/<%= course._id %>"><img src="/<%= course.image %>"
                      class="card-img-top" alt="..."></a>
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= course.title %>
                    </h5>
                    <div class="d-flex justify-content-between">
                      <p class="card-text">
                        <%= course.category %>
                      </p>
                      <p class="card-text text-success">
                        <%= course.price %> vnd
                      </p>
                    </div>
                    <a class="btn btn-primary"><i class="fas fa-cart-plus"></i></a>
                  </div>
                </div>
              </div>
              <%}%>
            <%} %> 
          <%} %>

          <% if(category == 'Lập trình cơ sở') {%>
            <h2 class="mt-2">
              <%= category.toUpperCase() %>
            </h2>
            <% for(let course of courses) {%>
              
                <%if(course.category == 'Lập trình cơ sở') {%>
                  <div class="col-lg-3 mt-3">
                  <div class="card" style="width: 18rem;">
                    <a href="/courses/<%= course._id %>"><img src="/<%= course.image %> "
                        class="card-img-top" alt="..."></a>
                    <div class="card-body">
                      <h5 class="card-title">
                        <%= course.title %>
                      </h5>
                      <div class="d-flex justify-content-between">
                        <p class="card-text">
                          <%= course.category %>
                        </p>
                        <p class="card-text text-success">
                          <%= course.price %> vnd
                        </p>
                      </div>
                      <a class="btn btn-primary"><i class="fas fa-cart-plus"></i></a>
                    </div>
                  </div>
                </div>
                <%}%>
              <%} %> 
            <%} %> 

            <% if(category == 'Lập trình nâng cao') {%>
              <h2 class="mt-2">
                <%= category.toUpperCase() %>
              </h2>
              <% for(let course of courses) {%>
                
                  <%if(course.category == 'Lập trình nâng cao') {%>
                    <div class="col-lg-3 mt-3">
                    <div class="card" style="width: 18rem;">
                      <a href="/courses/<%= course._id %>"><img src="/<%= course.image %> "
                          class="card-img-top" alt="..."></a>
                      <div class="card-body">
                        <h5 class="card-title">
                          <%= course.title %>
                        </h5>
                        <div class="d-flex justify-content-between">
                          <p class="card-text">
                            <%= course.category %>
                          </p>
                          <p class="card-text text-success">
                            <%= course.price %> vnd
                          </p>
                        </div>
                        <a class="btn btn-primary"><i class="fas fa-cart-plus"></i></a>
                      </div>
                    </div>
                  </div>
                  <%}%>
                <%} %> 
              <%} %> 

              <% if(category == 'Giải quyết vấn đề') {%>
                <h2 class="mt-2">
                  <%= category.toUpperCase() %>
                </h2>
                <% for(let course of courses) {%>
                  
                    <%if(course.category == 'Giải quyết vấn đề') {%>
                      <div class="col-lg-3 mt-3">
                      <div class="card" style="width: 18rem;">
                        <a href="/courses/<%= course._id %>"><img src="/<%= course.image %> "
                            class="card-img-top" alt="..."></a>
                        <div class="card-body">
                          <h5 class="card-title">
                            <%= course.title %>
                          </h5>
                          <div class="d-flex justify-content-between">
                            <p class="card-text">
                              <%= course.category %>
                            </p>
                            <p class="card-text text-success">
                              <%= course.price %> vnd
                            </p>
                          </div>
                          <a class="btn btn-primary"><i class="fas fa-cart-plus"></i></a>
                        </div>
                      </div>
                    </div>
                    <%}%>
                  <%} %> 
                <%} %> 

                <% if(category == 'Kỹ năng nâng cao') {%>
                  <h2 class="mt-2">
                    <%= category.toUpperCase() %>
                  </h2>
                  <% for(let course of courses) {%>
                    
                      <%if(course.category == 'Kỹ năng nâng cao') {%>
                        <div class="col-lg-3 mt-3">
                        <div class="card" style="width: 18rem;">
                          <a href="/courses/<%= course._id %>"><img src="/<%= course.image %> "
                              class="card-img-top" alt="..."></a>
                          <div class="card-body">
                            <h5 class="card-title">
                              <%= course.title %>
                            </h5>
                            <div class="d-flex justify-content-between">
                              <p class="card-text">
                                <%= course.category %>
                              </p>
                              <p class="card-text text-success">
                                <%= course.price %> vnd
                              </p>
                            </div>
                            <a class="btn btn-primary"><i class="fas fa-cart-plus"></i></a>
                          </div>
                        </div>
                      </div>
                      <%}%>
                    <%} %> 
                  <%} %> 
          
        <%} %>
    </div>

  </div>

  </div>
  </body>

  </html>